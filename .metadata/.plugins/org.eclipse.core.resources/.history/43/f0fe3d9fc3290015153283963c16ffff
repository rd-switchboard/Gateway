package org.rdswitchboard.libraries.graph;

import java.util.HashMap;
import java.util.HashSet;
import java.util.Map;
import java.util.Set;

public class HashMapSet extends HashMap<String, Object>{

	/**
	 * 
	 */
	private static final long serialVersionUID = -9215761426937841987L;

	public void add(String key, Object value) {
		if (null != value) {
			Object par = get(key);
			if (null == par) 
				put(key, value);
			else {
				if (par instanceof SetObject) {
					((SetObject) par).add(value);
				} else {
					if (par.equals(value))
						return; // nothing to do
					SetObject set = new SetObject();
					set.add(par);
					set.add(value);
					put(key, set);
				}
			}
		}
	}
}
