package org.rdswitchboard.libraries.graph;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

/**
 * Class to store Record information
 * 
 * @author Dima Kudriavcev (dmitrij@kudriavcev.info)
 * @date 2015-07-11
 * @version 1.0.0
 */

public class Node extends Record {
	private static final String PROPERTY_SOURCE = "source";
	
	private List<Relationship> relationships = null;
	private Map<String, String> indexes = null;
	
	/**
	 * Default class constructor
	 */
	public Node() {
		
	}

	/**
	 * 
	 * @param key
	 * @param type
	 */
	public Node(String key, String type) {
		super(key, type);
	}

	/**
	 * 
	 * @param key
	 * @param type
	 * @param source
	 */
	public Node(String key, String type, String source) {
		super(key, type);
		setSource(source);
	}
	
	/**
	 * 
	 * @param key
	 * @param type
	 * @param properties
	 */
	public Node(String key, String type, Map<String, Object> properties) {
		super(key, type, properties);
	}

	/**
	 * 
	 * @param key
	 * @param type
	 * @param properties
	 */
	public Node(String key, String type, String source, Map<String, Object> properties) {
		super(key, type, properties);
		setSource(source);
	}
	
	/**
	 * 
	 * @return
	 */
	public String getSource() {
		return (String) getProperty(PROPERTY_SOURCE);
	}

	/**
	 * 
	 * @param source
	 */
	public void setSource(String source) {
		setProperty(PROPERTY_SOURCE, source);
	}
	
	

	public void addRelationship(Relationship relationship) {
		if (null == relationships)
			relationships = new ArrayList<Relationship>();
		
		relationships.add(relationship);
	}
	
	public void addRelationships(List<Relationship> relationships) {
		if (null == this.relationships)
			this.relationships = new ArrayList<Relationship>();
		
		this.relationships.addAll(relationships);
	}
	
	public void setRelationships(List<Relationship> relationships) {
		this.relationships = relationships;
	}
	
	public List<Relationship> getRelationships() {
		return relationships;
	}
	
	public void addIndex(String index, String type) {
		if (null == indexes)
			indexes = new HashMap<String, String>();
		
		indexes.put(index,  type);
	}
	
	public void addIndexes(Map<String, String> indexes) {
		if (null == this.indexes)
			this.indexes = new HashMap<String, String>();
		
		this.indexes.putAll(indexes);
	}
	
	public void setIndexes(Map<String, String> indexes) {
		this.indexes = indexes;
	}
	
	public Map<String, String> getIndexes() {
		return indexes;
	}
	
	
	

	@Override
	public String toString() {
		return "Node [properties=" + properties + 
				", relationships=" + relationships + 
				", indexes=" + indexes + "]";
	}

	
}
