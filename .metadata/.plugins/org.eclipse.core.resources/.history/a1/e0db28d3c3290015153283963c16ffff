	}
			
	public Map<String, Object> getIndexes() {
		return indexes;
	}
	
	public Map<String, Object> getRelationships() {
		return relationships;
	}
	
	public void setRelationships(Map<String, Object> relationships) {
		this.relationships = relationships;
	}

