package org.rdswitchboard.libraries.graph;

import java.util.ArrayList;
import java.util.List;

public class Graph {
	private List<Node> nodes = null;
	
	public Graph() {
		
	}
	
	public Graph(List<Node> nodes) {
		this.nodes = nodes;
	}
	
	public List<Node> getNodes() {
		return nodes;
	}

	public void setNodes(List<Node> nodes) {
		if (null == this.nodes)
			this.nodes = nodes;
		else
			this.nodes.addAll(nodes);
	}
	
	public Graph withNodes(List<Node> nodes) {
		setNodes(nodes);
		return this;
	}
	public void addNode(Node node) {
		if (null == nodes)
			nodes = new ArrayList<Node>();
		nodes.add(node);
	}
	
	public Graph withNode(Node node) {
		addNode(node);
		return this;
	}

	public void addRelationship(Relationship relationship) {
		if (null == relationships)
			relationships = new ArrayList<Relationship>();
		relationships.add(relationship);
	}
	
	public Graph withRelationship(Relationship relationship) {
		addRelationship(relationship);
		return this;
	}

	@Override
	public String toString() {
		return "Graph [nodes=" + nodes + ", relationships=" + relationships
				+ "]";
	}
}
